### TaskCreator (Quarkus-only) Justfile
APP_NAME       := "taskcreator-quarkus"
QUARKUS_IMAGE   := "taskcreator-quarkus:latest"
QUARKUS_PORT    := "9080"               # Quarkus internal HTTP
HOST_PORT      := "10022"               # Host port to map to Quarkus internal HTTP

build:
	docker build -f Dockerfile -t {{QUARKUS_IMAGE}} .
	@echo "[INFO] Built image: {{QUARKUS_IMAGE}}"

rebuild:
	docker build --no-cache -f Dockerfile -t {{QUARKUS_IMAGE}} .
	@echo "[INFO] Rebuilt image (no cache): {{QUARKUS_IMAGE}}"

up: build
	@if docker ps --all --quiet --filter name=^/taskcreator-quarkus$ | grep -q .; then \
		echo "[INFO] Removing existing container"; \
		docker rm -f taskcreator-quarkus >/dev/null; \
	fi
	docker run -d --name taskcreator-quarkus -p {{HOST_PORT}}:{{QUARKUS_PORT}} {{QUARKUS_IMAGE}}
	@echo "[INFO] Started taskcreator-quarkus, waiting for app to start..."
	@until docker logs taskcreator-quarkus 2>&1 | grep -q '\"loggerName\":\"io.quarkus\".*started in .*Listening on:'; do sleep 1; done
	@echo "[INFO] Quarkus app started, port {{HOST_PORT}} is ready."

logs:
	docker logs -f taskcreator-quarkus

down:
	- docker rm -f taskcreator-quarkus
	@echo "[INFO] Container removed (if it existed)"

# Clean up
clean: down
    docker rmi {{APP_NAME}}
    @echo "[INFO] Image removed (if it existed)"

test: up
    @docker exec {{APP_NAME}} sh -c 'python3 /app/smoke.py'

local:
	./mvnw clean package quarkus:run
